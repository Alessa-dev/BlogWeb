---
const { links } = Astro.props;
---

<nav class="bg-black p-4 shadow-lg fixed bottom-0 w-full">
    <div class="container mx-auto flex justify-between items-center">
      <div class="text-white text-2xl font-bold">
        <a href="/" class="hover:text-violet-600 transition duration-300">Blog de Recetas</a>
      </div>
      <ul class="flex space-x-6">
        {links.map((link) => (
          <li>
            <a
              href={link.href}
              class="text-white hover:text-violet-600 transition duration-300 relative after:content-[''] after:block after:h-0.5 after:bg-violet-600 after:scale-x-0 after:transition-transform after:duration-300 hover:after:scale-x-100"
            >
              {link.text}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
  
